<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero Section -->
  <div class="text-center mb-16">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">
      Start Offering Your Services
    </h1>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      Join our community of professionals and start managing your appointments effortlessly.
      Set your schedule, manage multiple locations, and let clients book with you 24/7.
    </p>
  </div>

  <!-- Benefits Section -->
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
    <!-- Benefit 1 -->
    <div class="text-center">
      <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        Manage Multiple Locations
      </h3>
      <p class="text-gray-600 text-sm">
        Create and manage offices across different locations, each with its own schedule and settings.
      </p>
    </div>

    <!-- Benefit 2 -->
    <div class="text-center">
      <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        Set Your Own Schedule
      </h3>
      <p class="text-gray-600 text-sm">
        Define your work hours, break times, and appointment durations. Complete control over your availability.
      </p>
    </div>

    <!-- Benefit 3 -->
    <div class="text-center">
      <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        Accept Bookings 24/7
      </h3>
      <p class="text-gray-600 text-sm">
        Let customers book appointments at their convenience. You'll receive notifications for new bookings.
      </p>
    </div>

    <!-- Benefit 4 -->
    <div class="text-center">
      <div class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        Track Appointments Easily
      </h3>
      <p class="text-gray-600 text-sm">
        View all your appointments in one place. Filter by status, date, and location.
      </p>
    </div>
  </div>

  <!-- Social Proof Section (Optional) -->
  <div class="bg-gray-50 rounded-lg p-8 mb-12 text-center">
    <p class="text-gray-600 mb-2">Trusted by professionals across Brazil</p>
    <div class="flex justify-center items-center space-x-8 text-sm text-gray-500">
      <div>
        <span class="block text-2xl font-bold text-gray-900">500+</span>
        Active Providers
      </div>
      <div>
        <span class="block text-2xl font-bold text-gray-900">10,000+</span>
        Appointments Booked
      </div>
      <div>
        <span class="block text-2xl font-bold text-gray-900">4.8★</span>
        Average Rating
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="text-center">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">
      Ready to Get Started?
    </h2>
    <p class="text-gray-600 mb-8">
      Create your first office and start accepting appointments today
    </p>
    <%= link_to "Create Your First Office →",
        new_providers_office_path,
        class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-4 rounded-lg text-lg transition duration-150 ease-in-out shadow-lg hover:shadow-xl" %>
  </div>
</div>
