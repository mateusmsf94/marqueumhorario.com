<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header/Welcome Section -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Welcome back,
      <%= current_user.first_name %>!</h1>
    <p class="mt-2 text-sm text-gray-600">Manage your offices, schedules, and appointments</p>
  </div>
  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-100 rounded-md p-3">
          <svg
            class="h-6 w-6 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
            ></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Offices</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @offices.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-100 rounded-md p-3">
          <svg
            class="h-6 w-6 text-green-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Active Schedules</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @work_schedules.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-yellow-100 rounded-md p-3">
          <svg
            class="h-6 w-6 text-yellow-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Pending Appointments</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @pending_appointments.count %></p>
        </div>
      </div>
    </div>
  </div>
  <!-- Pending Appointments Section (Priority) -->
  <% if @pending_appointments.any? %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Pending Appointments</h2>
        <span class="text-sm text-gray-500"><%= @pending_appointments.count %>
          awaiting confirmation</span>
      </div>

      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              You have pending appointments that need confirmation. Review and
              respond to them below.
            </p>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <% @pending_appointments.each do |appointment| %>
          <div class="bg-white shadow rounded-lg p-6 border-l-4 border-yellow-400">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center">
                  <h3 class="text-lg font-semibold text-gray-900"><%= appointment.title %></h3>
                  <span
                    class="
                      ml-3 px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800
                    "
                  >
                    Pending
                  </span>
                </div>
                <div class="mt-2 grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                  <div>
                    <p class="text-gray-500">Customer</p>
                    <p class="font-medium text-gray-900"><%= appointment.customer.full_name %></p>
                  </div>
                  <div>
                    <p class="text-gray-500">Date & Time</p>
                    <p class="font-medium text-gray-900"><%= format_appointment_time(appointment) %></p>
                  </div>
                  <div>
                    <p class="text-gray-500">Office</p>
                    <p class="font-medium text-gray-900"><%= appointment.office.name %></p>
                  </div>
                </div>
                <% if appointment.description.present? %>
                  <div class="mt-3 text-sm text-gray-600">
                    <p class="font-medium text-gray-700">Notes:</p>
                    <p><%= appointment.description %></p>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="mt-4 flex gap-3">
              <%= button_to "Confirm",
              "#",
              method: :patch,
              class:
                "px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700",
              disabled: true %>
              <%= button_to "Decline",
              "#",
              method: :patch,
              class:
                "px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700",
              disabled: true %>
              <span class="text-xs text-gray-500 self-center">(Actions coming soon)</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Grid Layout for Offices and Upcoming Appointments -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Your Offices Section -->
    <div>
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Your Offices</h2>
        <%= link_to "Add Office",
        new_providers_office_path,
        class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
      </div>

      <% if @offices.any? %>
        <div class="space-y-4">
          <% @offices.each do |office| %>
            <div class="bg-white shadow rounded-lg p-6 hover:shadow-md transition-shadow">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900"><%= office.name %></h3>
                  <% if office.work_schedules.active.for_provider(current_user.id).none? %>
                    <span
                      class="
                        inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100
                        text-yellow-800 ml-2
                      "
                    >
                      âš  No schedule
                    </span>
                  <% end %>
                  <% if office.address.present? %>
                    <p class="text-sm text-gray-600 mt-1">
                      <%= office.address %>
                      <% if office.city.present? || office.state.present? %>
                        <br>
                        <%= [office.city, office.state].compact.join(", ") %>
                        <%= office.zip_code %>
                      <% end %>
                    </p>
                  <% end %>
                  <p class="text-sm text-gray-500 mt-2">
                    <svg
                      class="inline h-4 w-4 text-gray-400 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      ></path>
                    </svg>
                    Timezone:
                    <%= office.time_zone %>
                  </p>
                </div>
                <span class="px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              </div>
              <div class="mt-4 flex gap-3 text-sm">
                <%= link_to "Edit",
                edit_providers_office_path(office),
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
                <span class="text-gray-300">|</span>
                <% if office.work_schedules.active.for_provider(current_user.id).any? %>
                  <%= link_to "Edit Schedule",
                  edit_providers_office_work_schedules_path(office),
                  class: "text-blue-600 hover:text-blue-800 font-medium" %>
                <% else %>
                  <%= link_to "Set Up Schedule",
                  new_providers_office_work_schedules_path(office),
                  class: "text-yellow-600 hover:text-yellow-800 font-medium" %>
                <% end %>

                <span class="text-gray-300">|</span>
                <%= link_to "View Details",
                "#",
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-8 text-center">
          <svg
            class="mx-auto h-12 w-12 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
            ></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No offices yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating your first office.</p>
          <div class="mt-6">
            <%= link_to "Create Office",
            new_providers_office_path,
            class:
              "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Upcoming Appointments Section -->
    <div>
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Upcoming Appointments</h2>
        <%= link_to "View All",
        "#",
        class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
      </div>

      <% if @upcoming_appointments.any? %>
        <div class="space-y-3">
          <% @upcoming_appointments.group_by { |a| a.scheduled_at.to_date }.each do |date, appointments| %>
            <div class="mb-4">
              <h3 class="text-sm font-semibold text-gray-700 mb-2">
                <%= format_full_datetime_24h(date) %>
              </h3>
              <div class="space-y-2">
                <% appointments.each do |appointment| %>
                  <div class="bg-white shadow rounded-lg p-4 hover:bg-gray-50 transition-colors">
                    <div class="flex justify-between items-start">
                      <div class="flex-1">
                        <div class="flex items-center gap-2">
                          <h4 class="font-medium text-gray-900"><%= appointment.title %></h4>
                          <%= appointment_status_badge(appointment.status) %>
                        </div>
                        <div class="mt-1 text-sm text-gray-600">
                          <p>
                            <svg
                              class="inline h-4 w-4 text-gray-400 mr-1"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                              ></path>
                            </svg>
                            <%= format_time_24h(appointment.scheduled_at, timezone: appointment.office.time_zone) %>
                          </p>
                          <p class="mt-1">
                            <svg
                              class="inline h-4 w-4 text-gray-400 mr-1"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                              ></path>
                            </svg>
                            <%= appointment.customer.full_name %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-8 text-center">
          <svg
            class="mx-auto h-12 w-12 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No upcoming appointments</h3>
          <p class="mt-1 text-sm text-gray-500">Your schedule is clear.</p>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Quick Actions Section -->
  <div
    class="
      mt-8 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-lg p-6
      text-white
    "
  >
    <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to new_providers_office_path,
          class: "bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg p-4 transition-all" do %>
        <div class="flex items-center">
          <svg class="h-8 w-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6v6m0 0v6m0-6h6m-6 0H6"
            ></path>
          </svg>
          <div>
            <p class="font-semibold">Create New Office</p>
            <p class="text-sm text-blue-100">Add another location</p>
          </div>
        </div>
      <% end %>

      <%= link_to new_providers_office_work_schedules_path(@offices.first),
          class: "bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg p-4 transition-all" do %>
        <div class="flex items-center">
          <svg class="h-8 w-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          <div>
            <p class="font-semibold">Set Work Schedule</p>
            <p class="text-sm text-blue-100">Define availability</p>
          </div>
        </div>
      <% end %>

      <%= link_to "#",
          class: "bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg p-4 transition-all" do %>
        <div class="flex items-center">
          <svg class="h-8 w-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <div>
            <p class="font-semibold">View All Appointments</p>
            <p class="text-sm text-blue-100">Complete history</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
